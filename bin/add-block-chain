#!/bin/bash
usage() {
    echo "Usage: $0 " > /dev/stderr
    exit
}

check_uid() {
    if [[ $(id -u) -ne 0 ]]; then
        echo "Must be ran as root" > /dev/stderr
        exit
    fi
}

check_uid

if ! [[ $(iptables -L) =~  "Chain blocked" ]]; then
    iptables -N blocked 
    iptables -A blocked -j DROP
    echo "Blocked chain added"
else
    echo "Blocked chain already exists"
fi  

